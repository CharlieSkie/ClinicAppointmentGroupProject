@model ClinicAppointmentGroupProject.Controllers.BookAppointmentViewModel
@{
    ViewData["Title"] = "Book Appointment";
    Layout = "_Layout";
}

<div class="d-flex justify-content-center align-items-center mt-4">
    <div class="card shadow-lg p-4 w-100" style="max-width: 600px;">
        <h3 class="text-center mb-4 fw-bold">📅 Book New Appointment</h3>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <form asp-action="BookAppointment" method="post">
            <div class="mb-3">
                <label asp-for="PatientName" class="form-label fw-semibold">Patient Name</label>
                <input asp-for="PatientName" class="form-control" placeholder="Enter patient name" />
                <span asp-validation-for="PatientName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Department" class="form-label fw-semibold">Department</label>
                <select asp-for="Department" class="form-select" id="departmentSelect">
                    <option value="">-- Select Department --</option>
                    <option>General Medicine</option>
                    <option>Pediatrics</option>
                    <option>Dental</option>
                    <option>ENT</option>
                    <option>Cardiology</option>
                    <option>Orthopedics</option>
                    <option>Dermatology</option>
                </select>
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DoctorId" class="form-label fw-semibold">Select Doctor</label>
                <select asp-for="DoctorId" class="form-select" id="doctorSelect">
                    <option value="">-- Select Doctor --</option>
                    @foreach (var doctor in ViewBag.Doctors)
                    {
                        <option value="@doctor.Id" data-specialization="@doctor.Specialization">Dr. @doctor.FullName - @doctor.Specialization</option>
                    }
                </select>
                <span asp-validation-for="DoctorId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="AppointmentDate" class="form-label fw-semibold">Appointment Date</label>
                <input asp-for="AppointmentDate" class="form-control" type="date"
                       min="@DateTime.Today.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="AppointmentDate" class="text-danger"></span>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary px-4">💾 Book Appointment</button>
                <a asp-action="Dashboard" class="btn btn-outline-secondary ms-2 px-4">← Back to Dashboard</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const departmentSelect = document.getElementById('departmentSelect');
            const doctorSelect = document.getElementById('doctorSelect');
            const allDoctors = Array.from(doctorSelect.options).slice(1); // Exclude first option

            departmentSelect.addEventListener('change', function() {
                const selectedDepartment = this.value;

                // Clear current options except the first one
                while (doctorSelect.options.length > 1) {
                    doctorSelect.remove(1);
                }

                if (selectedDepartment) {
                    // Filter doctors by selected department
                    const filteredDoctors = allDoctors.filter(doctor =>
                        doctor.getAttribute('data-specialization') === selectedDepartment
                    );

                    // Add filtered doctors back to select
                    filteredDoctors.forEach(doctor => {
                        doctorSelect.appendChild(doctor);
                    });

                    if (filteredDoctors.length === 0) {
                        const noDoctorOption = document.createElement('option');
                        noDoctorOption.value = '';
                        noDoctorOption.textContent = '-- No doctors available for this department --';
                        doctorSelect.appendChild(noDoctorOption);
                    }
                } else {
                    // Show all doctors when no department selected
                    allDoctors.forEach(doctor => {
                        doctorSelect.appendChild(doctor);
                    });
                }
            });

            // Trigger change on page load if there's a selected department
            if (departmentSelect.value) {
                departmentSelect.dispatchEvent(new Event('change'));
            }
        });
    </script>
}

<style>
    /* ===== Responsive and Theme-Adaptive Form ===== */
    body {
        font-family: "Segoe UI", sans-serif;
    }

    .card {
        border-radius: 15px;
        transition: background-color 0.3s, color 0.3s, box-shadow 0.3s;
    }

    /* ===== DARK THEME ===== */
    [data-bs-theme="dark"] .card {
        background-color: #222;
        color: #f1f1f1;
        border: 1px solid #333;
    }

    [data-bs-theme="dark"] input.form-control,
    [data-bs-theme="dark"] select.form-select {
        background-color: #333;
        color: #f1f1f1;
        border-color: #444;
    }

        [data-bs-theme="dark"] input.form-control::placeholder {
            color: #aaa;
        }

    /* ===== LIGHT THEME ===== */
    [data-bs-theme="light"] .card {
        background-color: #fff;
        color: #212529;
        border: 1px solid #dee2e6;
    }

    [data-bs-theme="light"] input.form-control,
    [data-bs-theme="light"] select.form-select {
        background-color: #fff;
        color: #212529;
        border-color: #ccc;
    }

    /* ===== Mobile Friendly ===== */
    @@media (max-width: 576px) {
        .card {
            margin: 1rem;
            padding: 1.5rem !important;
        }
    }
</style>