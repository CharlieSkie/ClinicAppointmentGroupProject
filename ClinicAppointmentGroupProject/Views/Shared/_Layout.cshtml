<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Clinic System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Simple Sidebar Styles */
        .sidebar {
            width: 250px;
            min-height: 100vh;
            background-color: #f8f9fa;
            border-right: 1px solid #dee2e6;
            position: fixed;
            left: 0;
            top: 0;
            transition: all 0.3s;
        }

        .main-content {
            margin-left: 250px;
            padding: 20px;
            min-height: 100vh;
            background-color: #ffffff;
        }

        .sidebar-header {
            padding: 20px;
            border-bottom: 1px solid #dee2e6;
            background-color: #007bff;
            color: white;
        }

        .sidebar-nav {
            padding: 15px 0;
        }

        .nav-item {
            margin: 5px 15px;
        }

        .nav-link {
            color: #495057;
            padding: 10px 15px;
            border-radius: 5px;
            text-decoration: none;
            display: block;
            transition: all 0.3s;
        }

            .nav-link:hover {
                background-color: #e9ecef;
                color: #007bff;
            }

            .nav-link.active {
                background-color: #007bff;
                color: white;
            }

        .user-info {
            padding: 15px;
            border-top: 1px solid #dee2e6;
            background-color: #e9ecef;
        }

        .role-badge {
            font-size: 0.7em;
            margin-left: 5px;
        }

        /* Mobile Responsive */
        @@media (max-width: 768px) {
            .sidebar {
                width: 100%;
                height: auto;
                position: relative;
            }

            .main-content {
                margin-left: 0;
            }
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar Header -->
        <div class="sidebar-header">
            <h5>🏥 Clinic System</h5>
        </div>

        <!-- User Info -->
        @if (User.Identity?.IsAuthenticated == true)
        {
            <div class="user-info">
                <small>Welcome,</small>
                <div class="d-flex align-items-center">
                    <strong>@User.Identity?.Name "User"</strong>
                    @if (User.IsInRole("Admin"))
                    {
                        <span class="badge bg-danger role-badge">ADMIN</span>
                    }
                    else if (User.IsInRole("Doctor"))
                    {
                        <span class="badge bg-primary role-badge">DOCTOR</span>
                    }
                    else if (User.IsInRole("Client"))
                    {
                        <span class="badge bg-success role-badge">CLIENT</span>
                    }
                </div>
            </div>
        }

        <!-- Navigation -->
        <nav class="sidebar-nav">
            <!-- Common Links -->
            <div class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="Index">🏠 Home</a>
            </div>
            <div class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="About">ℹ️ About</a>
            </div>

            <!-- Role-Based Navigation -->
            @if (User.Identity?.IsAuthenticated == true)
            {
                <!-- Admin Links -->
                @if (User.IsInRole("Admin"))
                {
                    <div class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">📊 Admin Dashboard</a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="Users">👥 Manage Users</a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="Appointments">📋 All Appointments</a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="CreateDoctor">➕ Add Doctor</a>
                    </div>
                }

                <!-- Doctor Links -->
                @if (User.IsInRole("Doctor"))
                {
                    <div class="nav-item">
                        <a class="nav-link" asp-controller="Doctor" asp-action="Dashboard">👨‍⚕️ Doctor Dashboard</a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link" asp-controller="Doctor" asp-action="MyAppointments">📅 My Appointments</a>
                    </div>
                }

                <!-- Client Links -->
                @if (User.IsInRole("Client"))
                {
                    <div class="nav-item">
                        <a class="nav-link" asp-controller="Client" asp-action="Dashboard">👤 Client Dashboard</a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link" asp-controller="Client" asp-action="BookAppointment">➕ Book Appointment</a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link" asp-controller="Client" asp-action="MyAppointments">📋 My Appointments</a>
                    </div>
                }

                <!-- Authentication Links -->
                <div class="nav-item">
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="nav-link text-start border-0 bg-transparent w-100">
                            🚪 Logout
                        </button>
                    </form>
                </div>
            }
            else
            {
                <!-- Unauthenticated Links -->
                <div class="nav-item">
                    <a class="nav-link" asp-controller="Account" asp-action="Login">🔐 Login</a>
                </div>
                <div class="nav-item">
                    <a class="nav-link" asp-controller="Account" asp-action="Register">👤 Register</a>
                </div>
            }
        </nav>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Simple active link highlighting
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.nav-link');

            navLinks.forEach(link => {
                const linkPath = link.getAttribute('href');
                if (linkPath && currentPath.includes(linkPath)) {
                    link.classList.add('active');
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>