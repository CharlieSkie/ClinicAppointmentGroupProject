<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Clinic System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Simple Sidebar Styles */
        .sidebar {
            width: 250px;
            min-height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            transition: all 0.3s;
        }

        .main-content {
            margin-left: 250px;
            padding: 20px;
            min-height: 100vh;
            transition: all 0.3s;
        }

        .sidebar-header {
            padding: 20px;
            border-bottom: 1px solid;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .sidebar-nav {
            padding: 15px 0;
        }

        .nav-item {
            margin: 5px 15px;
        }

        .nav-link {
            padding: 10px 15px;
            border-radius: 5px;
            text-decoration: none;
            display: block;
            transition: all 0.3s;
        }

            .nav-link:hover {
                transform: translateX(5px);
            }

        .user-info {
            padding: 15px;
            border-top: 1px solid;
        }

        .theme-toggle {
            background: none;
            border: none;
            font-size: 1.2rem;
            cursor: pointer;
            padding: 5px;
            border-radius: 50%;
            transition: all 0.3s;
        }

        /* Theme Variables */
        [data-bs-theme="light"] {
            --sidebar-bg: #f8f9fa;
            --sidebar-border: #dee2e6;
            --sidebar-header-bg: #007bff;
            --sidebar-header-text: white;
            --nav-link-color: #495057;
            --nav-link-hover-bg: #e9ecef;
            --nav-link-hover-color: #007bff;
            --nav-link-active-bg: #007bff;
            --nav-link-active-color: white;
            --user-info-bg: #e9ecef;
            --main-bg: #ffffff;
            --text-color: #212529;
            /* Badge Colors */
            --admin-badge-bg: #dc3545;
            --admin-badge-text: white;
            --doctor-badge-bg: #0d6efd;
            --doctor-badge-text: white;
            --client-badge-bg: #198754;
            --client-badge-text: white;
        }

        [data-bs-theme="dark"] {
            --sidebar-bg: #212529;
            --sidebar-border: #495057;
            --sidebar-header-bg: #0d6efd;
            --sidebar-header-text: white;
            --nav-link-color: #dee2e6;
            --nav-link-hover-bg: #495057;
            --nav-link-hover-color: #0dcaf0;
            --nav-link-active-bg: #0d6efd;
            --nav-link-active-color: white;
            --user-info-bg: #343a40;
            --main-bg: #121212;
            --text-color: #f8f9fa;
            /* Badge Colors */
            --admin-badge-bg: #dc3545;
            --admin-badge-text: white;
            --doctor-badge-bg: #0dcaf0;
            --doctor-badge-text: black;
            --client-badge-bg: #20c997;
            --client-badge-text: black;
        }

            /* Apply Theme Variables */
            [data-bs-theme="light"] .sidebar,
            [data-bs-theme="dark"] .sidebar {
                background-color: var(--sidebar-bg);
                border-right: 1px solid var(--sidebar-border);
            }

            [data-bs-theme="light"] .sidebar-header,
            [data-bs-theme="dark"] .sidebar-header {
                background-color: var(--sidebar-header-bg);
                color: var(--sidebar-header-text);
                border-bottom-color: var(--sidebar-border);
            }

            [data-bs-theme="light"] .nav-link,
            [data-bs-theme="dark"] .nav-link {
                color: var(--nav-link-color);
            }

                [data-bs-theme="light"] .nav-link:hover,
                [data-bs-theme="dark"] .nav-link:hover {
                    background-color: var(--nav-link-hover-bg);
                    color: var(--nav-link-hover-color);
                }

                [data-bs-theme="light"] .nav-link.active,
                [data-bs-theme="dark"] .nav-link.active {
                    background-color: var(--nav-link-active-bg);
                    color: var(--nav-link-active-color);
                }

            [data-bs-theme="light"] .user-info,
            [data-bs-theme="dark"] .user-info {
                background-color: var(--user-info-bg);
                border-top-color: var(--sidebar-border);
                color: var(--text-color);
            }

            [data-bs-theme="light"] .main-content,
            [data-bs-theme="dark"] .main-content {
                background-color: var(--main-bg);
                color: var(--text-color);
            }

            [data-bs-theme="light"] .theme-toggle:hover,
            [data-bs-theme="dark"] .theme-toggle:hover {
                background-color: rgba(255, 255, 255, 0.1);
            }

        /* Theme-aware badges */
        .admin-badge {
            background-color: var(--admin-badge-bg) !important;
            color: var(--admin-badge-text) !important;
        }

        .doctor-badge {
            background-color: var(--doctor-badge-bg) !important;
            color: var(--doctor-badge-text) !important;
        }

        .client-badge {
            background-color: var(--client-badge-bg) !important;
            color: var(--client-badge-text) !important;
        }

        .role-badge {
            font-size: 0.7em;
            margin-left: 5px;
            border: none;
        }

        /* Mobile Responsive */
        @@media (max-width: 768px) {
            .sidebar {
                width: 100%;
                height: auto;
                position: relative;
            }

            .main-content {
                margin-left: 0;
            }
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar Header -->
        <div class="sidebar-header">
            <h5 class="mb-0">🏥 Clinic System</h5>
            <button id="themeToggle" class="theme-toggle" title="Toggle Theme">
                🌙
            </button>
        </div>

        <!-- User Info - FIXED WITH THEME-AWARE BADGES -->
        @if (User.Identity?.IsAuthenticated == true)
        {
            <div class="user-info">
                <small>Welcome,</small>
                <div class="d-flex align-items-center">
                    <strong>@User.Identity?.Name</strong>
                    @if (User.IsInRole("Admin"))
                    {
                        <span class="badge role-badge admin-badge">ADMIN</span>
                    }
                    else if (User.IsInRole("Doctor"))
                    {
                        <span class="badge role-badge doctor-badge">DOCTOR</span>
                    }
                    else if (User.IsInRole("Client"))
                    {
                        <span class="badge role-badge client-badge">CLIENT</span>
                    }
                </div>
            </div>
        }

        <!-- Navigation -->
        <nav class="sidebar-nav">
            <!-- Common Links -->
            <div class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="Index">🏠 Home</a>
            </div>
            <div class="nav-item">
                <a class="nav-link" asp-controller="Home" asp-action="About">ℹ️ About</a>
            </div>

            <!-- Role-Based Navigation -->
            @if (User.Identity?.IsAuthenticated == true)
            {
                <!-- Admin Links -->
                @if (User.IsInRole("Admin"))
                {
                    <div class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">📊 Admin Dashboard</a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="PendingApprovals">⏳ Pending Approvals</a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="Users">👥 Manage Users</a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="Appointments">📋 All Appointments</a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="CreateDoctor">➕ Add Doctor</a>
                    </div>
                }

                <!-- Doctor Links -->
                @if (User.IsInRole("Doctor"))
                {
                    <div class="nav-item">
                        <a class="nav-link" asp-controller="Doctor" asp-action="Dashboard">👨‍⚕️ Doctor Dashboard</a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link" asp-controller="Doctor" asp-action="MyAppointments">📅 My Appointments</a>
                    </div>
                }

                <!-- Client Links -->
                @if (User.IsInRole("Client"))
                {
                    <div class="nav-item">
                        <a class="nav-link" asp-controller="Client" asp-action="Dashboard">👤 Client Dashboard</a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link" asp-controller="Client" asp-action="BookAppointment">➕ Book Appointment</a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link" asp-controller="Client" asp-action="MyAppointments">📋 My Appointments</a>
                    </div>
                }

                <!-- Authentication Links -->
                <div class="nav-item">
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="nav-link text-start border-0 bg-transparent w-100">
                            🚪 Logout
                        </button>
                    </form>
                </div>
            }
            else
            {
                <!-- Unauthenticated Links -->
                <div class="nav-item">
                    <a class="nav-link" asp-controller="Account" asp-action="Login">🔐 Login</a>
                </div>
                <div class="nav-item">
                    <a class="nav-link" asp-controller="Account" asp-action="Register">👤 Register</a>
                </div>
            }
        </nav>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Theme Toggle Functionality
        const themeToggle = document.getElementById('themeToggle');
        const html = document.documentElement;

        // Load saved theme or default to light
        const savedTheme = localStorage.getItem('theme') || 'light';
        html.setAttribute('data-bs-theme', savedTheme);
        updateThemeIcon();

        themeToggle.addEventListener('click', () => {
            const currentTheme = html.getAttribute('data-bs-theme');
            const newTheme = currentTheme === 'dark' ? 'light' : 'dark';

            html.setAttribute('data-bs-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            updateThemeIcon();
        });

        function updateThemeIcon() {
            const currentTheme = html.getAttribute('data-bs-theme');
            themeToggle.textContent = currentTheme === 'dark' ? '☀️' : '🌙';
            themeToggle.title = `Switch to ${currentTheme === 'dark' ? 'light' : 'dark'} theme`;
        }

        // Active link highlighting
        document.addEventListener('DOMContentLoaded', function() {
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.nav-link');

            navLinks.forEach(link => {
                const linkPath = link.getAttribute('href');
                if (linkPath && currentPath.includes(linkPath) && linkPath !== '/') {
                    link.classList.add('active');
                }
            });

            // Special case for home page
            if (currentPath === '/' || currentPath === '/Home/Index') {
                const homeLink = document.querySelector('a[href="/"]');
                if (homeLink) homeLink.classList.add('active');
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>