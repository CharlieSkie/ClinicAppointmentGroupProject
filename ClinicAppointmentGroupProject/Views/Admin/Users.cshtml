@model List<ClinicAppointmentGroupProject.Controllers.UserRoleViewModel>
@{
    ViewData["Title"] = "User Management";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">👥 User Management</h1>
        <div class="btn-group">
            <a asp-action="CreateDoctor" class="btn btn-primary">➕ Add Doctor</a>
            <a asp-action="PendingApprovals" class="btn btn-warning">
                ⏳ Pending Approvals
                @{
                    var pendingCount = Model.Count(ur => ur.User.ApprovalStatus == ClinicAppointmentGroupProject.Models.ApprovalStatus.Pending);
                    if (pendingCount > 0)
                    {
                        <span class="badge bg-danger ms-1">@pendingCount</span>
                    }
                }
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">System Users</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Type</th>
                                <th>Specialization</th>
                                <th>Approval Status</th>
                                <th>Registered</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var userRole in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@userRole.User.FullName</strong>
                                        @if (userRole.User.UserType == ClinicAppointmentGroupProject.Models.UserType.Admin)
                                        {
                                            <span class="badge bg-danger ms-1">ADMIN</span>
                                        }
                                    </td>
                                    <td>@userRole.User.Email</td>
                                    <td>
                                        @foreach (var role in userRole.Roles)
                                        {
                                            <span class="badge @GetRoleBadgeClass(role)">@role</span>
                                        }
                                    </td>
                                    <td>@userRole.User.UserType</td>
                                    <td>@userRole.User.Specialization</td>
                                    <td>
                                        <span class="badge @GetApprovalStatusBadgeClass(userRole.User.ApprovalStatus)">
                                            @userRole.User.ApprovalStatus
                                        </span>
                                        @if (userRole.User.ApprovalStatus == ClinicAppointmentGroupProject.Models.ApprovalStatus.Approved && userRole.User.ApprovedAt.HasValue)
                                        {
                                            <br />
                                            <small class="text-muted">Approved: @userRole.User.ApprovedAt.Value.ToString("MMM dd, yyyy")</small>
                                        }
                                    </td>
                                    <td>@userRole.User.CreatedAt.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <form method="post" asp-action="RemoveUser" class="d-inline"
                                              onsubmit="return confirm('Are you sure you want to remove @userRole.User.FullName? This action cannot be undone.');">
                                            <input type="hidden" name="userId" value="@userRole.User.Id" />
                                            <button type="submit" class="btn btn-danger btn-sm">🗑 Remove</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <p class="text-muted">No users found in the system.</p>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    public string GetRoleBadgeClass(string role)
    {
        return role switch
        {
            "Admin" => "bg-danger",
            "Doctor" => "bg-primary",
            "Client" => "bg-success",
            _ => "bg-secondary"
        };
    }

    public string GetApprovalStatusBadgeClass(ClinicAppointmentGroupProject.Models.ApprovalStatus status)
    {
        return status switch
        {
            ClinicAppointmentGroupProject.Models.ApprovalStatus.Pending => "bg-warning",
            ClinicAppointmentGroupProject.Models.ApprovalStatus.Approved => "bg-success",
            ClinicAppointmentGroupProject.Models.ApprovalStatus.Rejected => "bg-danger",
            _ => "bg-secondary"
        };
    }
}