@model List<ClinicAppointmentGroupProject.Controllers.UserRoleViewModel>
@{
    ViewData["Title"] = "User Management";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">👥 User Management</h1>
        <a asp-action="CreateDoctor" class="btn btn-primary">➕ Add Doctor</a>
    </div>

    <div class="card shadow">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">System Users</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Type</th>
                                <th>Specialization</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var userRole in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@userRole.User.FullName</strong>
                                        @if (userRole.User.UserType == ClinicAppointmentGroupProject.Models.UserType.Admin)
                                        {
                                            <span class="badge bg-danger ms-1">ADMIN</span>
                                        }
                                    </td>
                                    <td>@userRole.User.Email</td>
                                    <td>
                                        @foreach (var role in userRole.Roles)
                                        {
                                            <span class="badge @GetRoleBadgeClass(role)">@role</span>
                                        }
                                    </td>
                                    <td>@userRole.User.UserType</td>
                                    <td>@userRole.User.Specialization</td>
                                    <td>
                                        <span class="badge bg-success">Active</span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            @if (userRole.Roles.Contains("Doctor"))
                                            {
                                                <button class="btn btn-outline-info">View Schedule</button>
                                            }
                                            <button class="btn btn-outline-warning">Reset Password</button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <p class="text-muted">No users found in the system.</p>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    public string GetRoleBadgeClass(string role)
    {
        return role switch
        {
            "Admin" => "bg-danger",
            "Doctor" => "bg-primary",
            "Client" => "bg-success",
            _ => "bg-secondary"
        };
    }
}