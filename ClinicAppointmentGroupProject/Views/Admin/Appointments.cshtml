@model List<ClinicAppointmentGroupProject.Models.Patient>
@{
    ViewData["Title"] = "All Appointments";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">📋 All Appointments</h1>
        <div class="btn-group">
            <button class="btn btn-outline-primary">Export</button>
            <button class="btn btn-outline-secondary">Filter</button>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Appointment ID</th>
                                <th>Patient Name</th>
                                <th>Department</th>
                                <th>Doctor</th>
                                <th>Client</th>
                                <th>Date</th>
                                <th>Status</th>
                                <th>Created</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var appointment in Model)
                            {
                                <tr>
                                    <td><span class="badge bg-secondary">@appointment.appointmentId</span></td>
                                    <td>@appointment.patientName</td>
                                    <td>@appointment.department</td>
                                    <td>@(appointment.Doctor?.FullName ?? "Not Assigned")</td>
                                    <td>@(appointment.ClientUser?.FullName ?? "N/A")</td>
                                    <td>@appointment.AppointmentDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(appointment.Status)">
                                            @appointment.Status
                                        </span>
                                    </td>
                                    <td>@appointment.CreatedAt.ToString("MMM dd, yyyy")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <p class="text-muted">No appointments found.</p>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    public string GetStatusBadgeClass(ClinicAppointmentGroupProject.Models.AppointmentStatus status)
    {
        return status switch
        {
            ClinicAppointmentGroupProject.Models.AppointmentStatus.Pending => "bg-warning",
            ClinicAppointmentGroupProject.Models.AppointmentStatus.Confirmed => "bg-success",
            ClinicAppointmentGroupProject.Models.AppointmentStatus.Completed => "bg-info",
            ClinicAppointmentGroupProject.Models.AppointmentStatus.Cancelled => "bg-danger",
            _ => "bg-secondary"
        };
    }
}