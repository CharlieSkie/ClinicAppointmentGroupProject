@model ClinicAppointmentGroupProject.Controllers.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">👨‍💼 Admin Dashboard</h1>
        <div class="btn-group">
            <a asp-action="Users" class="btn btn-outline-primary">👥 Manage Users</a>
            <a asp-action="Appointments" class="btn btn-outline-success">📋 All Appointments</a>
            <a asp-action="CreateDoctor" class="btn btn-outline-info">➕ Add Doctor</a>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-5">
        <div class="col-md-4 mb-3">
            <div class="card bg-primary text-white shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@Model.TotalAppointments</h4>
                            <p class="card-text">Total Appointments</p>
                        </div>
                        <div class="align-self-center">
                            <span class="fs-1">📊</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card bg-success text-white shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@Model.TotalDoctors.Count</h4>
                            <p class="card-text">Total Doctors</p>
                        </div>
                        <div class="align-self-center">
                            <span class="fs-1">👨‍⚕️</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card bg-info text-white shadow">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@Model.TotalClients.Count</h4>
                            <p class="card-text">Total Clients</p>
                        </div>
                        <div class="align-self-center">
                            <span class="fs-1">👥</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Appointments -->
    <div class="card shadow">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">📅 Recent Appointments</h5>
        </div>
        <div class="card-body">
            @if (Model.RecentAppointments.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Patient</th>
                                <th>Department</th>
                                <th>Doctor</th>
                                <th>Date</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var appointment in Model.RecentAppointments)
                            {
                                <tr>
                                    <td><span class="badge bg-secondary">@appointment.appointmentId</span></td>
                                    <td>@appointment.patientName</td>
                                    <td>@appointment.department</td>
                                    <td>@(appointment.Doctor?.FullName ?? "Not Assigned")</td>
                                    <td>@appointment.AppointmentDate.ToString("yyyy-MM-dd")</td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(appointment.Status)">
                                            @appointment.Status
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <p class="text-muted">No recent appointments found.</p>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    public string GetStatusBadgeClass(ClinicAppointmentGroupProject.Models.AppointmentStatus status)
    {
        return status switch
        {
            ClinicAppointmentGroupProject.Models.AppointmentStatus.Pending => "bg-warning",
            ClinicAppointmentGroupProject.Models.AppointmentStatus.Confirmed => "bg-success",
            ClinicAppointmentGroupProject.Models.AppointmentStatus.Completed => "bg-info",
            ClinicAppointmentGroupProject.Models.AppointmentStatus.Cancelled => "bg-danger",
            _ => "bg-secondary"
        };
    }
}